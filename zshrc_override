setxkbmap -option 'caps:ctrl_modifier'
xcape -e 'Caps_Lock=Escape'

alias xclip="xclip -selection c"

PATH="$PATH:$HOME/bin/android-studio/bin"
PATH="$PATH:$HOME/bin/intellij/bin"

PATH="$PATH:$HOME/.gem/ruby/2.2.0/bin"

PATH="$HOME/bin/android-sdk/platform-tools:$PATH"

xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5
xinput set-prop "TPPS/2 IBM TrackPoint" "Device Accel Constant Deceleration" 0.95
# Set the deceleration of the TrackPad so high that it will never move
xinput set-prop "SynPS/2 Synaptics TouchPad" 264 999999
# Also disable tap to click. Now we can use the TrackPad justfor scrolling
xinput set-prop "SynPS/2 Synaptics TouchPad" "Synaptics Tap Action" 0
